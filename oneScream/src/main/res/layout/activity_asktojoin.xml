<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/asktojoin_text"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="50dp">

        <FrameLayout
            android:id="@+id/frm_btn_yes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/xml_button_rect">

            <TextView
                android:id="@+id/tv_btn_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_button_trans_rect_bg_selector"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/asktojoin_btn_yes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_font_size" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frm_btn_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/xml_button_rect">

            <TextView
                android:id="@+id/tv_btn_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_button_trans_rect_bg_selector"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingBottom="2dp"

                android:text="@string/asktojoin_btn_no"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_font_size" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>