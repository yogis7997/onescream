<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_height" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_galaxy" />

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_moon" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_shadow" />
                <ImageView
                android:tint="@android:color/white"
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 
                android:layout_marginLeft="10dp"
                android:scaleType="center"
                                android:background="@drawable/xml_button_trans_rect_bg_selector"
                
                android:src="@drawable/btn_back" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/frm_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                android:id="@+id/labelll"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                  
                android:src="@drawable/onescream_logoq"
                 />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/xml_shape_rect_yellow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="@string/intro_text1"
                        android:textColor="#6b8096"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/intro"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" >

                    <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/signup_email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#344251"
                    android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#999999" />
                    <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Password"
                        android:inputType="textPassword"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#344251"
                    android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#999999" />
                    <FrameLayout
                        android:id="@+id/frm_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#6b8096" >

                        <TextView
                            android:id="@+id/tv_btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/xml_button_trans_rect_bg_selector"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:text="@string/login_btn"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_font_size" />
                    </FrameLayout>

                    <!--<FrameLayout-->
                        <!--android:id="@+id/frm_btn_fb_login"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/button_height"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:background="#3b5998" >-->

                        <!--<TextView-->
                            <!--android:id="@+id/tv_btn_fb_login"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:background="@drawable/xml_button_trans_rect_bg_selector"-->
                            <!--android:duplicateParentState="true"-->
                            <!--android:gravity="center"-->
                            <!--android:paddingBottom="2dp"-->
                            <!--android:text="@string/login_fb_btn"-->
                            <!--android:textColor="@android:color/white"-->
                            <!--android:textSize="@dimen/button_font_size" />-->
                    <!--</FrameLayout>-->
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"

    android:layout_marginRight="20dp"
    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/logintxt"
                        android:layout_marginTop="20dp"
                        android:text="@string/login_text2"
                        android:textColor="#6b8096"

                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xml_button_trans_rect_bg_selector"
                        android:padding="2dp"
                        android:text="@string/login_signup_btn"
                        android:textColor="#344251"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/button_font_size" />
</LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/reset_text2"
                            android:textColor="#6b8096"
                            android:id="@+id/text1"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_btn_resetpassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/xml_button_trans_rect_bg_selector"
                            android:padding="2dp"
                            android:text="@string/reset_text"
                            android:textColor="#344251"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/button_font_size" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>