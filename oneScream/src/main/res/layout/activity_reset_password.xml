<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background_color"
    tools:context="com.onescream.login.ResetPassword">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/iv_back"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/xml_button_trans_rect_bg_selector"
                android:scaleType="center"
                android:tint="@android:color/black"
                android:src="@drawable/menusmal"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_head_resetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/xml_button_trans_rect_bg_selector"
            android:padding="5dp"
            android:text="@string/reset_password_head"
            android:textColor="#344251"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/xml_shape_rect_yellow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/reset_password_text"
            android:textColor="#6b8096"
            android:id="@+id/msg_tv"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/signup_email"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:textColor="#344251"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/line"
            android:background="#999999" />
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp">
         <FrameLayout
            android:id="@+id/frm_btn_Reset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"

            android:background="#222a33" >

            <TextView
                android:id="@+id/tv_btn_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_button_trans_rect_bg_selector"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textStyle="bold"
                android:text="@string/reset_password_btn_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_font_size" />
        </FrameLayout>
         <FrameLayout
             android:id="@+id/frm_btn_thanks"
             android:layout_width="match_parent"
             android:layout_height="@dimen/button_height"
                android:visibility="gone"
             android:background="#222a33" >

             <TextView
                 android:id="@+id/tv_btn_thanks"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@drawable/xml_button_trans_rect_bg_selector"
                 android:duplicateParentState="true"
                 android:gravity="center"
                 android:paddingBottom="2dp"
                 android:textStyle="bold"
                 android:text="@string/reset_password_btn_thanks"
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/button_font_size" />
         </FrameLayout>
     </RelativeLayout>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:id="@+id/reseterror"
            android:visibility="gone"
    android:orientation="vertical">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:textStyle="bold"
            android:text="Oops."
            android:textColor="#e3bc4e"
            android:textSize="13sp" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="@string/reset_password_error_text"
               android:textColor="#6b8096"
               android:textSize="14sp" />
       </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logintxt"
            android:layout_marginTop="20dp"
            android:text="@string/login_text2"
            android:layout_gravity="center_horizontal"
            android:textColor="#6b8096"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_button_trans_rect_bg_selector"
            android:padding="5dp"
            android:text="@string/login_signup_btn"
            android:textColor="#344251"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/button_font_size" />
</LinearLayout>
    </LinearLayout>
</RelativeLayout>
