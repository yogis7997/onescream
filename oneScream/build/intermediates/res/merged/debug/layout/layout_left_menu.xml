<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181f27" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

        <ImageView
                            android:id="@+id/close_button"
        
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                                android:layout_marginLeft="7dp"
                android:padding="15dp"
                android:src="@drawable/menu"
                />

            <ImageView
                android:id="@+id/screen_title"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                 android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:gravity="center"
                
                android:src="@drawable/splash_screen_text" />

        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/frm_menu_one_scream"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:id="@+id/menui1"
                android:background="@color/menu_marker_color" />

            <TextView
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:gravity="center_vertical"
                android:text="One Scream"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_menu_your_details"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" 
             android:id="@+id/menui2"
                
                />

            <TextView
                  android:id="@+id/menu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/settings_submenu_your_details"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_menu_contact_us"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" 
                                android:id="@+id/menui3"
                />

            <TextView
                  android:id="@+id/menu3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/settings_submenu_contactus"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_menu_tour"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menui4"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" />

            <TextView
                  android:id="@+id/menu4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/settings_submenu_tour"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frm_menu_about"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menui7"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/menu7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/setting_submenu_about"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frm_menu_faq"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menui5"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" />

            <TextView
                  android:id="@+id/menu5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/settings_submenu_faq"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frm_menu_logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menui6"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/menu_marker_color"
                android:visibility="invisible" />

            <TextView
                  android:id="@+id/menu6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/settings_submenu_logout"
                android:textColor="@drawable/xml_menu_text_color"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/tv_menu_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"

            android:src="@drawable/text_privacy"
            />
        <ImageView
            
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#6b8096" />

        <ImageView
            android:id="@+id/tv_menu_toc"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:src="@drawable/text_terms"
             />
    </LinearLayout>

</RelativeLayout>