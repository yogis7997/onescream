<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" 
    android:interpolator="@android:anim/decelerate_interpolator">
    
    <rotate
		android:fromDegrees="0" android:toDegrees="1800"
		android:pivotX="50%" android:pivotY="50%"
		android:duration="900" /> 
		
	<scale 
		android:fromXScale="1.0" android:toXScale="0.1"
		android:fromYScale="1.0" android:toYScale="0.1"
		android:pivotX="50%p" android:pivotY="50%p"
		android:duration="900" />
	
	<translate 
		android:fromXDelta="0%p" android:toXDelta="50%p"
		android:fromYDelta="0%p" android:toYDelta="70%p"
		android:duration="900" />
        
	<alpha 
		android:fromAlpha="1.0" android:toAlpha="0.1"
		android:duration="900" />
    
</set>